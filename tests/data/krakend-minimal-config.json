{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "plugin": {
        "pattern":".so",
        "folder": "/opt/krakend/plugins"
    },
    "endpoints": [
        {
          "endpoint": "/test/{id}",
          "backend": [
            {
              "host": [
                "http://localhost:8080"
              ],
              "url_pattern": "/__health",
              "extra_config": {
                "plugin/http-client": {
                    "name": "porton"
                }
              }
            }
          ]
        }
      ],
      "extra_config": {
        "plugin/http-server": {
          "name": ["porton"]
        }
      }
}